<div class="snippets">

  <div class="snippets-header">
    <h2>Specific Snippet</h2>
    <p>You are viewing a specific snippet</p>
  </div>

  <div class="form-container">

  <div class="row g-3">
    <div class="col-md-6">
      <label for="name" class="form-label">Name</label>
        <input
          class='form-control'
          type='text'
          name='name'
          value='{{viewData.snippet.name}}'
          readonly
        />
    </div>

    <div class="col-md-6">
      <label for="description" class="form-label">Description</label>
        <input
          class='form-control'
          type='text'
          name='description'
          value='{{viewData.snippet.description}}'
          readonly
        />
    </div>

    <div class="col-12">
      <label class="form-label">Snippet</label>
      <textarea
        class="form-control"
        name="code"
        rows="20"
        readonly>{{viewData.snippet.code}}
      </textarea>
    </div>

    <p>Tag: {{viewData.snippet.tag}}</p>

    <div class="row mt-3">
      <div class="col-auto ps-2">
        <a
          class='btn btn-primary'
          href='edit/{{viewData.snippet._id}}'
        >
          Edit
        </a>
      </div>

      <div class="col-auto ps-0">
        <form method="POST" action="delete/{{viewData.snippet._id}}">
          <button type="submit" class="btn btn-primary">Delete</button>
        </form>
      </div>


    </div>

  </div>

</div>

