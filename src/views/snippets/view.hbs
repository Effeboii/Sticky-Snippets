<div class="snippets">

  <div class="snippets-header">
    <h2>Specific Snippet</h2>
    <p>You are viewing a specific snippet</p>
  </div>

  <div class="form-container">

  <div class="row g-3">
    <div class="col-md-6">
      <label for="name" class="form-label">Name</label>
      <input
        class="form-control"
        type="text"
        name="name"
        value={{viewData.snippet.name}}
        placeholder="The name of the snippet..."
        minlength="1"
        readonly
        required
      >
    </div>

    <div class="col-md-6">
      <label for="description" class="form-label">Description</label>
      <input
        class="form-control"
        type="text"
        name="description"
        value={{viewData.snippet.description}}
        placeholder="What's your snippet about?"
        minlength="1"
        readonly
        required
      >
    </div>

    <div class="col-12">
      <label for="inputAddress" class="form-label">Snippet</label>
      <textarea
        class="form-control"
        name="code"
        placeholder="Write your snippet here..."
        rows="20"
        readonly
        required>{{viewData.snippet.code}}</textarea>
    </div>

    <p>Tag: {{viewData.snippet.tag}}</p>

    <div class="row mt-3">
      <div class="col-auto ps-2">
        <a
          class='btn btn-primary'
          href='edit/{{viewData.snippet._id}}'
        >
          Edit
        </a>
      </div>

      <div class="col-auto ps-0">
        <a
          class='btn btn-danger'
          href='delete/{{viewData.snippet._id}}'
        >
          Delete
        </a>
      </div>

    </div>

  </div>

</div>

