<h1><span class="fa fa-cogs"></span> Snippets</h1>

<div class="card-container">
  <div class="row row-cols-3">
    {{#each viewData.snippets}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{this.tag}}</h6>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">{{this.date}}</p>
        <a href="snippets/{{this.id}}" class="card-link">View more</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>